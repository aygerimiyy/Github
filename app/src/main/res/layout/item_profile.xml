<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    android:background="@color/white"
    android:padding="8dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aii_img_item"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:padding="4dp"
            android:src="@drawable/aii_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
   
   <TextView
       android:id="@+id/tv_name_item"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:text="aygerimiyy"
       android:textColor="@color/black"
       android:textSize="18sp"
       app:layout_constraintBottom_toBottomOf="@id/aii_img_item"
       app:layout_constraintTop_toTopOf="@id/aii_img_item"
       app:layout_constraintStart_toEndOf="@id/aii_img_item"/>

        <TextView
            android:id="@+id/tv_proekt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aii_img_item"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Local"/>

        <ImageView
            android:id="@+id/iv_ic_full_star"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_full_star"
            app:layout_constraintTop_toBottomOf="@id/tv_proekt_name"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            app:tint="#FFC107" />

        <TextView
            android:id="@+id/tv_number_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_ic_full_star"
            app:layout_constraintTop_toTopOf="@id/iv_ic_full_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_ic_full_star"
            android:text="0"/>

        <ImageView
            android:id="@+id/iv_moon"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/moon"
            app:layout_constraintTop_toTopOf="@id/tv_number_star"
            android:layout_margin="16dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_number_star"
            app:layout_constraintStart_toEndOf="@id/tv_number_star"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_proekt_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_moon"
            app:layout_constraintTop_toTopOf="@id/iv_moon"
            app:layout_constraintBottom_toBottomOf="@id/iv_moon"
            android:text="Kotlin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    

</androidx.cardview.widget.CardView>