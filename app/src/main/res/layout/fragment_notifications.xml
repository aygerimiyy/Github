<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/notifications_white_img">
    <Toolbar
        android:id="@+id/toolbar_notification"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF"/>
    <TextView
        android:id="@+id/tv_notofocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text="Notifications"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/inbox_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_notofocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        app:cornerRadius="50dp"
        android:drawablePadding="20dp"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_down"
        android:backgroundTint="#BABAC3"
        android:drawableTint="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/unread_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unread"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/inbox_btn"
        app:layout_constraintBottom_toBottomOf="@id/inbox_btn"
        app:layout_constraintStart_toEndOf="@id/inbox_btn"
        android:layout_margin="16dp"
        app:cornerRadius="50dp"
        android:drawablePadding="20dp"
        android:textColor="@color/black"
        android:backgroundTint="#BABAC3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/repository_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repository"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/unread_btn"
        app:layout_constraintBottom_toBottomOf="@id/unread_btn"
        app:layout_constraintStart_toEndOf="@id/unread_btn"
        android:layout_margin="16dp"
        app:cornerRadius="50dp"
        android:backgroundTint="#BABAC3"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_down"
        android:drawableTint="@color/black"
        android:drawablePadding="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>